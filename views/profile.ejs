<!DOCTYPE html>
<html lang="en">
<%- include('head') %>

    <body>
        <%- include('navigation') %>
            <main class="profile">
                <%- include('sideNav') %>

                    <div class="profile__info">
                        <div class="profile__info--img ">
                            <ion-icon name="person-outline"></ion-icon>
                            <ion-icon name="arrow-up-circle-outline" class="upload"></ion-icon>
                        </div>

                        <form class="profile__info--form">
                            <div class="form__group">
                                <div class="form__group--input">
                                    <label for="first-name">First Name</label>
                                    <input type="text" name="first-name" placeholder="First Name">
                                </div>
                                <div class="form__group--input">
                                    <label for="last-name">Last Name</label>
                                    <input type="text" name="last-name" placeholder="Last Name">
                                </div>
                                <div class="form__group--input">
                                    <label for="phone-num">Phone Number</label>
                                    <input type="text" name="phone-num" placeholder="Phone Number">
                                </div>
                            </div>
                            <div class="form__group--two">
                                <div class="form__group--input">
                                    <label for="email">Email</label>
                                    <input type="email" name="email" placeholder="Email">
                                </div>
                                <div class="form__group--input">
                                    <label for="password">Password</label>
                                    <input type="password" name="password" placeholder="Password">
                                </div>
                            </div>
                            <button type="submit" class="sqr-btn">Save</button>
                        </form>
                    </div>

            </main>
            <h1>
                <%= userInfo.uid %>
            </h1>
            <h1>
                <%= userInfo.email %>
            </h1>
            </form>
            <div>
                <% for(const property in collectionInfo){ %>
                    <ul>
                        <% for( let i=0; i < collectionInfo[property].length; i++ ) { %>
                            <li>
                                <%= collectionInfo[property][i]%>
                            </li>
                            <% } %>
                    </ul>
                    <% } %>
            </div>


            <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
            <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

            <script src="bundle.js"></script>
    </body>

</html>