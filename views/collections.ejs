<!DOCTYPE html>
<html lang="en">
<%- include('head') %>
    <body>
        <%- include('navigation') %>
        <main>
            <%- include('sideNav') %>
            <div class="cols">
                <% for(let col in collectionInfo){ %>
                    <%if(col !== "userInfo" ){%>
                    <div class="cols__col">
                        <h4 class="cols__col--title"><%=collectionInfo[col].title%></h4>
                        <p class="cols__col--books"><span class="num"><%=collectionInfo[col].books.length%></span> Books</p>
                    </div>
                    <%}%>
                <%}%>
                    <div class="addNew" id="newCol">
                        <div class="addNew__Icon">
                            <ion-icon class="icon" name="add-outline"></ion-icon>
                        </div>
                        <h4 class="addNew__title">New Collection</h4>
                    </div>
                </div>      
        </main>

        <section id="creatCol" class="section hideColForm">
            <button class="form__close btn" id="closeColBtn">
                <ion-icon name="close-outline"></ion-icon>
            </button>
        <form action="" class="col__form" id="newColForm" >
            <h3 class="col__form--title">Creat New Collection</h3>
            <div class="form__input--feild">
                <label for="newColName">New Collection Name</label>
                <input class="text-input" type="text" name="newColName"  placeholder="New Collection Name" required>
            </div>
            <div class="form__input--feild">
                <label for="newColDisc">Discription</label>
                <input class="text-input" type="text" maxlength="50"  name="newColDisc" placeholder="Discription" required>
            </div>
            <div class="buttons">
                <button id="creatColBtn">Creat Collection</button>
                <button id="cancelCol">Cancel</button>
            </div>
        </form>
        <%- include('scripts')%>            
    </body>

</html>